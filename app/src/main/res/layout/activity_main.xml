<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#243E4B"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Parte superior: Imagen -->
            <ImageView
                android:id="@+id/toolbar_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

            <!-- Parte inferior: Iconos -->
            <LinearLayout
                android:id="@+id/toolbar_icons"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/toolbar_image"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <!-- Ícono de clave -->
                <ImageView
                    android:id="@+id/icon_clave"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/clave" />

                <!-- Ícono de red -->
                <ImageView
                    android:id="@+id/icon_red"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/red" />

                <!-- Ícono de configuración -->
                <ImageView
                    android:id="@+id/icon_config"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/config" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Contenedor principal -->
    <FrameLayout
        android:id="@+id/principal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bienvenido a Tec Box"
            android:textColor="#243E4B"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- FrameLayout para Clave -->
    <FrameLayout
        android:id="@+id/frame_clave"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="left">

            <EditText
                android:id="@+id/input_clave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ingresa la clave"
                android:inputType="textPassword"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_enviar_clave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar Clave"
                android:padding="8dp" />

        </LinearLayout>
    </FrameLayout>

    <!-- FrameLayout para WiFi -->
    <FrameLayout
        android:id="@+id/frame_wifi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <TextView
            android:id="@+id/wifi_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="WiFi"
            android:textColor="#243E4B"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- FrameLayout para Config -->
    <FrameLayout
        android:id="@+id/frame_config"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <TextView
            android:id="@+id/config_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Configuración"
            android:textColor="#243E4B"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>
